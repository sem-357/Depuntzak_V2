@model List<Depuntzak_V2.Models.CartItem>

<h1>Winkelmandje</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Prijs</th>
            <th>Aantal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Product.Name</td>
                <td>€@item.Product.Price</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<div>
    Subtotaal: €@ViewBag.Subtotal
</div>

@if (Model.Count > 0)
{
    <form method="post" asp-controller="ProductTransactions" asp-action="PlaceOrder">
        <button type="submit" class="btn btn-primary">Plaats Bestelling</button>
    </form>
}
else
{
    <p>Je winkelmandje is leeg.</p>
}